#include <iostream>
using namespace std;

main()
{
    int op, clase, op1, op2, op3;
    cout<<"Bienvenido a mi pagina de reservas de avion "<<endl;
    cout<<"A continuacion te presento el menu de opciones que tenemos para ti"<<endl;
    do
    {
        cout<<"1)Asignar una silla a un pasajero"<<endl;
